#include<iostream>
using namespace std;
int main()
{
    int numerator , denominator,result;
    cout<<"enter numerator and denomimnator:"<<endl;
    cin>>numerator>>denominator;
    try{
        if(denominator==0)
        {
            throw denominator;
        }
        result=numerator/denominator;
    }
    catch(int ex)
    {
        cout<<"problem caught"<<ex<<endl;
    }
    
    cout<<"division is="<<result<<endl;
}
