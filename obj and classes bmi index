#include<iostream>
using namespace std;
class BMI{
    private:
    float weight;
    float height;
    float bmi;
    public:
   BMI(float w, float h){
        weight=w;
        height=h;
        
    }
    void calculate(){
    
    bmi=weight/(height*height);
    }
    void display()
    {
        cout<<"bmi index is="<<bmi;
    }

};
int main(){
    BMI b1=BMI(70,1.8);
    b1.calculate();
    b1.display();
}
