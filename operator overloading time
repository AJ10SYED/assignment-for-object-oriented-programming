#include <iostream>
using namespace std;
class time
{
private:
    int hours;
    int minutes;
    int seconds;

public:
    time()
    {
        hours = 0;
        minutes = 0;
        seconds = 0;
    }
    time(int h, int m, int s)
    {
        hours = h;
        minutes = m;
        seconds = s;
    }

    void display() 
    {
        cout << hours << ":"
             << minutes << ":"
             << seconds << endl;
    }

    time operator + ( time t) 
    {
        time result;

        result.seconds = seconds + t.seconds;
        result.minutes = minutes + t.minutes;
        result.hours   = hours + t.hours;
        if (result.seconds >= 60)
        {
            result.minutes += result.seconds / 60;
            result.seconds %= 60;
        }

        if (result.minutes >= 60)
        {
            result.hours += result.minutes / 60;
            result.minutes %= 60;
        }

        return result;
    }
};

int main()
{
    time t1(2, 45, 50);   
    time t2(1, 20, 30);   
    time t3;                    
    t3 = t1+t2;               
    t3.display();
}
