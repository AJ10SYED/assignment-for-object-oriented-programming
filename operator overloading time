#include <iostream>
using namespace std;

class time
{
private:
    int hours;
    int minutes;
    int seconds;

public:
    time()
    {
        hours = 0;
        minutes = 0;
        seconds = 0;
    }
    time(int h, int m, int s)
    {
        hours = h;
        minutes = m;
        seconds = s;
    }
    void display() const
    {
        cout << hours << ":"
             << minutes << ":"
             << seconds << endl;
    }
    void add(const time& t1, const time& t2)
    {
        seconds = t1.seconds + t2.seconds;
        minutes = t1.minutes + t2.minutes;
        hours   = t1.hours + t2.hours;
        if (seconds >= 60)
        {
            minutes += seconds / 60;
            seconds %= 60;
        }
        if (minutes >= 60)
        {
            hours += minutes / 60;
            minutes %= 60;
        }
    }
};

int main()
{
    const time t1(2, 45, 50);   
    const time t2(1, 20, 30);  
    time t3;                   
    t3.add(t1, t2);
    t3.display();

    return 0;
}
